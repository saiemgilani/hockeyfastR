year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the powerplay R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Saiem Gilani")
         ),
         title = "powerplay: The SportsDataverse's R Package for NHL Data.",
         url = c("https://saiemgilani.github.io/powerplay/"),
         year = year,
         note = note,
         textVersion = paste(
    "Saiem Gilani. powerplay: The SportsDataverse's R Package for NHL Data.",
    "Retrieved from https://saiemgilani.github.io/powerplay/"
  )
)
